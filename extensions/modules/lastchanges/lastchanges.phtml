<?php if ($this->has('warningmessage')): ?>
    <p class="messagebox info"><?php echo $this->warningmessage ?></p>
<?php endif?>
<?php if ($this->has('infomessage')): ?>
    <p class="messagebox info"><?php echo $this->infomessage ?></p>
<?php endif?>

<?php if ($this->has('changes')): ?>
<ol class="bullets-none separated">
<?php $odd = false; ?>
<?php foreach($this->changes as $change): ?>
    <li class="<?php echo $odd ? 'odd' : 'even'; $odd = !$odd; ?>">
            <a resource="<?php echo $change['resource'] ?>" class="Resource hasMenu"
               about="<?php echo $change['resource'] ?>"
               href="<?php echo $this->urlBase ?>resource/properties/?r=<?php echo urlencode($change['resource']) ?>">
                <?php echo $change['rname'] ?>
            </a> by
            <?php echo $change['author'] ?>
        </li>
<?php endforeach; ?>
</ol>
<?php endif?>
