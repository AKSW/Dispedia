                        <a href="<?php echo $this->url; ?>remove/?currentProposal[uri]=<?php echo urlencode($proposal['uri']); ?>">
                            <img src="<?php echo $this->imagesUrl; ?>cross.png" align="absmiddle"/></a>&nbsp;
                        <?php echo $proposal ['label']; ?>
					</div>
				
				<?php } ?>
			</td>
        
		</tr>
		
		<?php } ?>
		 
	</table>
			
	<input type="hidden" name="do" value="save"/>

